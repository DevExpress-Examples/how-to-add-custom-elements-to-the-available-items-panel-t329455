<Window x:Class="DXLayoutControlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
		xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxlc:LayoutControl Name="lc" IsCustomization="True" Orientation="Vertical">
            <dxlc:LayoutItem Label="First Name" Name="layoutItem1">
                <dxe:TextEdit/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Last Name" Name="layoutItem2">
                <dxe:TextEdit/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Phone" Name="layoutItem3">
                <dxe:TextEdit/>
            </dxlc:LayoutItem>
            <dxlc:LayoutControl.AvailableItems>
                <dxlc:LayoutItem Label="City" Name="layoutItem4">
                    <dxe:TextEdit/>
                </dxlc:LayoutItem>
            </dxlc:LayoutControl.AvailableItems>
        </dxlc:LayoutControl>
    </Grid>
</Window>
